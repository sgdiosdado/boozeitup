<!DOCTYPE html>
<html>
  <head>
    <title>BoozeItUp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

  </head>
  <body>
    <section class="hero is-info is-bold">
      <div class="hero-body">
        <div class="container">
          <h1 class="title">
            <%= yield :page_title%>
          </h1>
          <h2 class="subtitle">
            <%= yield :page_subtitle%>
          </h2>
        </div>
      </div>
      <div class="hero-foot">
    <nav class="tabs is-boxed is-fullwidth">
      <div class="container">
        <ul>
          <li>
            <%= link_to "Index", root_path%>
          </li>
          <li>
            <%= link_to "New", event_new_path%>
          </li>
        </ul>
      </div>
    </nav>
  </div>
    </section>

    <div id= "warning" class="container">
        <% flash.each do |name,message| %>
          <div id="message" class="message-header <%= name %>">
            <p><%=message.html_safe %></p>
            <button class="delete is-small" data-dismiss="true" aria-label="delete"><span>&times;</span></button>
          </div>
        <%end%>
    </div>

    <section class="container content_padding">
      <%= yield %>
    </section>
    <%= javascript_pack_tag 'contentLoaded', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
